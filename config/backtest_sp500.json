{
    "price_csv_path": "data/sp500_prices.csv",
    "tickers": ["AAPL", "MSFT", "NVDA", "GOOG", "JPM", "JNJ", "XOM", "PG", "AMZN", "V"],
    "return_type": "simple",
    "lookback_window": 252,
    "rebalance_frequency": 21,
    "strategy_name": "all",
    "initial_capital": 1000000.0,
    "use_gpu": true,
    "admm": {
        "confidence_level": 0.95,
        "max_iter": 300
    },
    "monte_carlo": {
        "n_scenarios": 20000,
        "seed": 42
    },
    "mean_variance": {
        "shrinkage_intensity": 0.3
    },
    "transaction_costs": {
        "cost_rate": 0.001,
        "min_trade_threshold": 0.005
    },
    "output_dir": "results/backtest_sp500",
    "verbose": false
}
